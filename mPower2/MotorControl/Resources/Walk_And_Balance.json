                         "footer": "lightBackground"
                     }
                 },
                 "viewTheme":{
                     "viewIdentifier":"Instruction",
                     "storyboardIdentifier":"ActiveTaskSteps"
                 },
                 "actions":{
                     "goForward":{
                         "buttonTitle":"The phone is in a pocket"
                     }
                 }
